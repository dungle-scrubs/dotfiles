{
  "name": "attention-webview",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run build:slack && npm run build:ai-chat",
    "build:slack": "esbuild src/app.tsx --bundle --minify --outfile=dist/bundle.js --format=iife --target=safari14",
    "build:ai-chat": "esbuild src/ai-chat.tsx --bundle --minify --outfile=dist/ai-chat.js --format=iife --target=safari14",
    "watch": "esbuild src/app.tsx --bundle --outfile=dist/bundle.js --format=iife --target=safari14 --watch",
    "watch:ai-chat": "esbuild src/ai-chat.tsx --bundle --outfile=dist/ai-chat.js --format=iife --target=safari14 --watch",
    "lint": "eslint src/ --max-warnings 0",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc -p tsconfig.app.json --noEmit && tsc -p tsconfig.ai-chat.json --noEmit"
  },
  "dependencies": {
    "preact": "^10.19.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "esbuild": "^0.20.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.48.1"
  }
}
